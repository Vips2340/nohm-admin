.main_content.model
  label
    font-weight bold
    display inline
    margin-right 8px
    
    &:after
        content ':'
        

  td, th
    border-right 1px solid #ccc
    padding 2px 10px
    
    &.last
      border-right 0

  .version_warning, .version_error
    color orange
    font-size 1.3em
    margin-bottom -.4em
    
  .version_error
    color red
    
  
  & > ul > li
    margin 15px 0
    

.instance_list

  tr
    border-bottom 1px dotted #ddd
    
  tbody tr
    cursor pointer
    
    &:hover
      background-color lighten(#00f, 50%)
  

.instance_details
    
  .btn
    margin 0 5px